<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Globals.Requisition.Requisition_main"
    android:clickable="true"
 >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/note"
            android:drawablePadding="5dp"
            android:text="Requisition Slip"
            android:textColor="#286090"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#428bca"
                android:drawableStart="@drawable/add_white"

                android:drawablePadding="5dp"
                android:paddingLeft="30dp"
                android:textAlignment="textStart"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:background="#d9534f"
                android:drawableStart="@drawable/delete_white"

                android:drawablePadding="5dp"
                android:paddingLeft="30dp"
                android:textAlignment="textStart"
                android:textColor="#ffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_start_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Start Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_end_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="End Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_generate_report"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_btn_green"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Generate Report"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/sv_swine_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"

                        >


                        <CheckBox
                            android:id="@+id/cb_all"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#D8D6D6"
                            android:buttonTint="#4CAF50"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="#"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="REQUISITION SLIP #"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="DATE"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="REMARKS"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="REQUESTED BY"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_customer"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="STATUS"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rec_requsition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="outsideInset"
                            android:scrollbars="vertical">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>


    </LinearLayout>
</FrameLayout>