<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Notes_Pig.Swine_Delivery_Report.daily_swine_delivery_main">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_togle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Swine Delivery"
            android:textColor="#286090"
            android:textSize="20dp"
            android:drawableStart="@drawable/note"
            android:drawablePadding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border"
                    android:padding="10dp"
                    android:text="Start Date:"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border"
                    android:padding="10dp"
                    android:text="End Date:"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_ripple"
            android:gravity="center"
            android:text="  Generate Report  "
            android:textColor="@android:color/white">

        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/loading_"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:orientation="horizontal"

                            >


                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="#"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"

                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Date"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"

                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Customer"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Reference #"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Heads"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="Weight(kg)"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_8"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="1dp"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Total"
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/tv_7"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Ave."
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="Swine Cost"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="1dp"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Total"
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Ave."
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_9"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Swine Type"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_10"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Ave. age (days)"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_11"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Live WT. Price/kg"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_12"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="ADG"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="Gross Profit"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="1dp"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Total"
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#4e6882"
                                        android:gravity="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="Ave."
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_13"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Total Sales"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollbarStyle="outsideInset"
                                android:scrollbars="vertical">

                            </android.support.v7.widget.RecyclerView>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="302dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Total:"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/total_heads"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/ave_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_swinecost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/ave_swinecost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/total_adg"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="0.000"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total_gross"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="Total"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/ave_gross"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#4e6882"
                                    android:gravity="center|right"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:text="Ave."
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/total_sales"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:background="#4e6882"
                                android:gravity="center|right"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="0000"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>

        <com.evrencoskun.tableview.TableView
            android:id="@+id/tableview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </com.evrencoskun.tableview.TableView>

    </LinearLayout>

</LinearLayout>