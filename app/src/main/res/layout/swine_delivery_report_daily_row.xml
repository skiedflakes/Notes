<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/counter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:paddingRight="2dp"
            android:paddingBottom="10dp"
            android:text="#"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"

            android:background="#7f99b2"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Date"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"

            android:background="#7f99b2"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Customer"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_reference"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Reference #"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_heads"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Heads"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_ave_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Ave."
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_swine_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_swine_ave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Ave."
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_swine_type"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Swine Type"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_ave_age"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Ave. age (days)"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_per_kg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Live WT. Price/kg"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_adg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="ADG"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_gross"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_ave_gross"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7f99b2"
                android:gravity="center|right"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Ave."
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_total_sales"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#7f99b2"
            android:gravity="center|right"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Total Sales"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="visible" />


    </LinearLayout>
</LinearLayout>