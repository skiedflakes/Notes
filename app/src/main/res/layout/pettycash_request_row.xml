<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:text="#"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/txt_code"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Code "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_created_by"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Created By"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_requested_by"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Requested By"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_remarks"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Remarks"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Amount"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_date_requested"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Date Requested"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_receipt"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Receipt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_approval"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Approval"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_liquidation"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Liquidation"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_replenish"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Replenish Status"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Status "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_approved"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Approved By"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>