<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/column_header_container"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:background="@color/cell_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#4e6882"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Week"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/column_header_textView"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:layout_marginRight="1dp"
                android:background="#4e6882"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                tools:text="Header Data" />

            <TextView
                android:id="@+id/column_header_textView2"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:layout_marginRight="1dp"
                android:background="#4e6882"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                tools:text="test" />

            <TextView
                android:id="@+id/column_header_textView3"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:background="#4e6882"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                tools:text="test" />

            <ImageButton
                android:id="@+id/column_header_sortButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|center"
                android:layout_marginLeft="4dp"
                android:background="@android:color/transparent"
                android:paddingRight="-5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_down"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

