<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:buttonTint="#4CAF50"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_counter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="#"
                android:textColor="@color/color_text_light_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/check_green"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_check_circle_green_24dp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#E7E4B5"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ripple"
                android:padding="1dp"
                android:src="@drawable/edit_white" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_item"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_packaging"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_req"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_supplier"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_supplier_price"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>