<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"

            android:background="#E7E4B5"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_packaging"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"

            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_remaining_qty"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_supplier_price"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_supplier"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_needed_by"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/color_text_light_black"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>