<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Globals.Requisition.Requisition_main"
    android:clickable="true"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Voucher"
            android:textColor="#286090"
            android:textSize="20dp"
            android:drawableStart="@drawable/note"
            android:drawablePadding="5dp"/>

        <LinearLayout
            android:id="@+id/l_start_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Start Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_end_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="End Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_generate_report"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dialogFragment_layout_spinner"
            android:visibility="visible"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Generate Report"
                android:textStyle="bold" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/sv_swine_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"

                        >


                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="#"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="CV #"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="ACCOUNT"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="BANK"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="CHECK NO."
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_issued_date"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="ISSUED DATE"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_check_date"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="CHECK DATE"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="AMOUNT"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_encoded_by"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"

                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="ENCODED BY"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="STATUS"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_approved_by"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#CECDCD"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Approved by:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rec_cv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="outsideInset"
                            android:scrollbars="vertical">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"

                        >


                        <TextView

                            android:layout_width="42dp"
                            android:layout_height="match_parent"

                            android:background="#B9F6CA"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"

                            android:textColor="@android:color/black"
                            android:textSize="14sp" />


                        <TextView

                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:background="#B9F6CA"

                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView

                            android:layout_width="137dp"
                            android:layout_height="match_parent"

                            android:background="#B9F6CA"

                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"

                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="#B9F6CA"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="162dp"
                            android:layout_height="match_parent"
                            android:background="#B9F6CA"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:background="#B9F6CA"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:background="#B9F6CA"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="111dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#B9F6CA"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Total: "
                            android:paddingRight="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_total_amount"
                            android:layout_marginLeft="1dp"
                            android:layout_width="111dp"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            android:background="#B9F6CA"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:background="#B9F6CA"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#B9F6CA"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#B9F6CA"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
  </ScrollView>

    </LinearLayout>
</FrameLayout>